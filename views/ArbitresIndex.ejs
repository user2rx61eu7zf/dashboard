<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Accueil Arbitres</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/ajouter_arbitres" class="btn btn-outline-primary">+ Ajouter un arbitre
            </a>
        </div>
    </div>
</div>

<% messages.forEach(element=> { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= element %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% }) %>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prenom</th>
                        <th scope="col" class="text-end"></th>
                    </tr>
                </thead>

                <tbody>
                    <% result.forEach(element=> { %>
                        <tr class="align-middle">
                            <td>
                                <%= element.id_ar%>
                            </td>
                            <td>
                                <%= element.nom_ar%>
                            </td>
                            <td>
                                <%= element.prenom_ar%>
                            </td>
                            <td>
                                <div style="position: relative; margin-left: 50px">
                                    <% if (element.photo_ar) { %>
                                        <img src="/images/<%= element.photo_ar %>" class="rounded-circle"
                                            alt="Description of the image"
                                            style="width: 50px; height: 50px; object-fit: cover" />
                                        <% } else { %>
                                            <img src="/images/default.jpg" class="rounded-circle" alt="image"
                                                style="width: 50px; height: 50px; object-fit: cover" />
                                            <% } %>
                                </div>
                            </td>
                            <td class="text-end">
                                <div class="d-flex flex-row justify-content-end gap-2">
                                    <a href="/detailsArbitres/<%= element.id_ar %>" type="button"
                                        class="btn btn-primary btn-small">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a href="/editArbitre/<%= element.id_ar%>" type="button"
                                        class="btn btn-warning btn-small">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form action="/supprimerArbitres/<%= element.id_ar %>?_method=DELETE" method="POST"
                                        class="position-relative">
                                        <button type="submit" class="btn btn-danger btn-small">
                                            <i class="bi bi-person-x"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>