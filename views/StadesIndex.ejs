<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Accueil des Stades</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <!-- <a href="/ajouter_stades" class="btn btn-outline-primary">+ Ajouter un Stade -->
            </a>
        </div>
    </div>
</div>

<% messages.forEach(element=> { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= element %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% }) %>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col" class="text-center">Nom</th>
                        <th scope="col" class="text-center">Ville</th>
                        <th scope="col" class="text-center">Equipe</th>
                        <th scope="col" class="text-end">Gerer</th>
                    </tr>
                </thead>

                <tbody>
                    <% result.forEach(element=> { %>
                        <tr class="align-middle">
                            <td>
                                <%= element.id_std%>
                            </td>
                            <td>
                                <%= element.nom_std%>
                            </td>
                            <td>
                                <%= element.ville_std%>
                            </td>
                            <td>
                                <%= element.nom_eq%>
                                    <img src="/img/<%= element.logo_eq %>" class="rounded-circle "
                                        alt="Description of the image"
                                        style="width: 50px; height: 50px; object-fit: cover;">
                            </td>
                            <td class="text-end">
                                <div class="d-flex flex-row justify-content-end gap-2">
                                    <a href="/detailsStades/<%= element.id_std %>" type="button"
                                        class="btn btn-primary btn-small">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a href="/editStades/<%= element.id_std%>" type="button"
                                        class="btn btn-warning btn-small">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form action="/supprimerStades/<%= element.id_std %>?_method=DELETE" method="POST"
                                        class="position-relative">
                                        <button type="submit" class="btn btn-danger btn-small">
                                            <i class="bi bi-person-x"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>