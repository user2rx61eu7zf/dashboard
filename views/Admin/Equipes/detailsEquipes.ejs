<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">
    <%= result[0].nom_eq%>
  </h1>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= result[0].nom_eq %>
          </li>
        </ol>
      </nav>
    </div>
  </div>
</div>

<ul class="list-group">
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Nom:</b></div>
      <div class="col">
        <%= result[0].nom_eq %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Abreviation:</b></div>
      <div class="col">
        <%= result[0].abre_eq %>
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Logo:</b></div>
      <div style="position: relative; margin-left: 50px">
        <% if (result.length> 0 && result[0].logo_eq) { %>
          <img src="/images/<%= result[0].logo_eq %>" class="img-fluid mb-3 mt-3 rounded" alt="Description of the image"
            style="
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
          " />
          <% } else { %>
            <img src="/images/default.jpg" class="img-fluid rounded-circle mb-3 mt-3" alt="image" style="
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
          " />
            <% } %>
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Date de Création:</b></div>
      <div class="col">
        <% if(result.length> 0) { var dateOfCreationString = result[0].date_eq;
          var dateOfCreation = new Date(dateOfCreationString); var
          formattedDateOfCreation = ("0" + dateOfCreation.getDate()).slice(-2) +
          "/" + ("0" + (dateOfCreation.getMonth() + 1)).slice(-2) + "/" +
          dateOfCreation.getFullYear(); %> <%= formattedDateOfCreation %>
            <% } else { // Output 'null' if no result is available %> null <% } %>
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Ville de l'équipe:</b></div>
      <div class="col">
        <%= result[0].ville_eq %>
      </div>
    </div>
  </li>
</ul>