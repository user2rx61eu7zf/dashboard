<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ajouter un Arbitre</title>
  </head>

  <body>
    <div
      class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
    >
      <h1 class="h2">Ajouter un Arbitre</h1>
      <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
          <button class="btn btn-outline-primary">
            <i class="bi bi-info-circle"></i> Aide0
          </button>
        </div>
      </div>
    </div>
    <div class="col py-1">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/Admin">Acceuil</a></li>
              <li class="breadcrumb-item active">Nouveau Arbitre</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
    <form
      action="/ajouter_arbitres"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div>
        <label for="validationCustom01" class="form-label">Nom</label>
        <input
          type="text"
          class="form-control"
          name="nom_ar"
          id="validationCustom01"
          value=""
          required
        />
        <div class="valid-feedback"></div>
      </div>
      <div>
        <label for="validationCustom02" class="form-label">Prenom</label>
        <input
          type="text"
          class="form-control"
          name="prenom_ar"
          id="validationCustom02"
          value=""
          required
        />
        <div class="valid-feedback"></div>
      </div>
      <div>
        <label for="validationCustom04" class="form-label">Poste</label>
        <select
          class="form-select"
          name="poste"
          id="validationCustom04"
          required
        >
          <option selected disabled value=""></option>
          <option>Arbitre Central</option>
          <option>Arbitre de touche 1</option>
          <option>Arbitre de touche 2</option>
          <option>Arbitre de surface 1</option>
          <option>Arbitre de surface 2</option>
        </select>
        <div class="invalid-feedback"></div>
      </div>
      <div>
        <label for="validationCustom01" class="form-label">Photo:</label>
        <input
          type="file"
          class="form-control"
          name="photoArbitre"
          id="validationCustom01"
          value=""
          accept="image/*"
        />
        <div class="valid-feedback"></div>
      </div>
      <div>
        <div class="valid-feedback"></div>
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-primary"
        >
          <h1 class="h2">Compte d'arbitre</h1>
        </div>

        <div>
          <label for="validationCustom01" class="form-label">E-mail</label>
          <input
            type="email"
            class="form-control"
            name="email"
            value=""
            required
          />
          <div class="valid-feedback"></div>
        </div>
        <div>
          <label for="validationCustom01" class="form-label"
            >Mot de passe
          </label>
          <div class="input-group">
            <input
              type="password"
              class="form-control"
              name="motdepasse"
              id="password"
              value=""
              required
            />
            <span class="input-group-text"
              ><i id="icon" class="bi bi-eye-fill"></i
            ></span>
          </div>

          <div class="valid-feedback"></div>
        </div>
      </div>
      <div>
        <button class="btn btn-primary mt-3" type="submit">Ajouter</button>
      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <script>
      (function () {
        "use strict";
        var forms = document.querySelectorAll(".needs-validation");

        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();

      //seepassword
      document.getElementById("icon").addEventListener("click", function () {
        var passwordField = document.getElementById("password");
