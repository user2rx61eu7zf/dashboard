<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Modification: <%= result[0].nom_ar%>
            <%= result[0].prenom_ar %>
    </h1>

</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">
                        <%= result[0].nom_ar%>
                            <%= result[0].prenom_ar %>
                    </li>
                </ol>
            </nav>
        </div>

    </div>

</div>


<form action="/editArbitres/<%= result[0].id_ar %>?_method=PUT" method="POST" enctype="multipart/form-data">

    <div class="row form-group mb-4">
        <div>
            <label for="validationCustom01" class="form-label">Nom</label>
            <input type="text" class="form-control" name="nom_ar" id="validationCustom01"
                value="<%= result[0].nom_ar %>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Prenom</label>
            <input type="text" class="form-control" name="prenom_ar" id="validationCustom02"
                value="<%= result[0].prenom_ar%>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom01" class="form-label">Date de naissance</label>
            <input type="date" class="form-control" name="date_ar" id="validationCustom01" value="" required />
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Poste</label>
            <input type="text" class="form-control" name="poste_ar" id="validationCustom02"
                value="<%= result[0].poste_ar%>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom01" class="form-label">Photo:</label>
            <input type="file" class="form-control" name="photoArbitre" id="validationCustom01" value=""
                accept="image/*" />
            <div class="valid-feedback"></div>
        </div>
        <div>
            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-primary">
                <h1 class="h2">Compte du Arbitre</h1>
            </div>

            <div>
                <label for="validationCustom01" class="form-label">E-mail</label>
                <input type="email" class="form-control" name="email_ar" value="<%= result[0].email_co %>" required>
                <div class="valid-feedback"></div>
            </div>
            <div>
                <label for="validationCustom01" class="form-label">Mot de passe </label>
                <div class="input-group">
                    <input type="password" class="form-control" name="motdepasse_ar" id="password"
                        value="<%= result[0].mot_de_passe %>" required>
                    <span class="input-group-text"><i id="icon" class="bi bi-eye-fill "></i></span>
                </div>

                <div class="valid-feedback"></div>
            </div>

        </div>
        <div class="form-group mb-4">
            <button type="submit" class="btn btn-primary mt-3">Modifier Arbitre</button>

            <button type="button" class="btn btn-danger mt-3" data-bs-toggle="modal" id="deleteButton"
                data-bs-target="#deleteModal">Supprimer Arbitre</button>

        </div>

</form>



<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Vous etes sur le point de SUPPRIMER un arbitre .</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    Ceci supprimera l'arbitre de votre systeme <b class="fw-bold">
                        <%= result[0].nom_ar%>
                            <%= result[0].prenom_ar%>
                    </b><br />
                    Etes-vous sur ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <form action="/supprimerArbitres/<%= result[0].id_ar %>?_method=DELETE" method="POST"
                    class="position-relative">
                    <button type="submit" class="btn btn-danger">Oui, Supprimer arbitre</button>
                </form>
            </div>
        </div>
    </div>
</div>
