<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2"><%= result[0].nom_std%></h1>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= result[0].nom_std %></li>
        </ol>
      </nav>
    </div>
  </div>
</div>

<ul class="list-group">
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Nom:</b></div>
      <div class="col"><%= result[0].nom_std %></div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Ville:</b></div>
      <div class="col"><%= result[0].ville_std %></div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Capacite:</b></div>
      <div class="col"><%= result[0].capacite_std %></div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"><b>Date de Cr√©ation:</b></div>
      <div class="col">
        <% if(result.length> 0) { var dateOfCreationString = result[0].date_crt;
        var dateOfCreation = new Date(dateOfCreationString); var
        formattedDateOfCreation = ("0" + dateOfCreation.getDate()).slice(-2) +
        "/" + ("0" + (dateOfCreation.getMonth() + 1)).slice(-2) + "/" +
        dateOfCreation.getFullYear(); %> <%= formattedDateOfCreation %> <% }
        else { // Output 'null' if no result is available %> null <% } %>
      </div>
    </div>
  </li>

  <li class="list-group-item"></li>
</ul>
