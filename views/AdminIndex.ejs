<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Accueil Gestionnaire</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/ajouter_gestionnaire" class="btn btn-outline-primary"
        >+ Ajouter un Gestionnaire
      </a>
    </div>
  </div>
</div>

<% messages.forEach(element=> { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= element %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }) %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nom</th>
        <th scope="col">Prenom</th>
        <th scope="col" class="text-end"></th>
      </tr>
    </thead>

    <tbody>
      <% result.forEach(element=> { %>
      <tr class="align-middle">
        <td><%= element.id_ge%></td>
        <td><%= element.nom%></td>
        <td><%= element.prenom%></td>
        <td>
          <div style="position: relative; margin-left: 50px">
            <% if (element.photo_ge) { %>
            <img
              src="/images/<%= element.photo_ge %>"
              class="rounded-circle"
              alt="Description of the image"
              style="width: 50px; height: 50px; object-fit: cover"
            />
            <% } else { %>
            <img
              src="/images/default.jpg"
              class="rounded-circle"
              alt="image"
              style="width: 50px; height: 50px; object-fit: cover"
            />
            <% } %>
          </div>
        </td>
        <td class="text-end">
          <div class="d-flex flex-row justify-content-end gap-2">
            <a
              href="/detailGestio/<%= element.id_ge %>"
              type="button"
              class="btn btn-primary btn-small"
            >
              <i class="bi bi-eye"></i>
            </a>

            <a
              href="/edit/<%= element.id_ge%>"
              type="button"
              class="btn btn-warning btn-small"
            >
              <i class="bi bi-pencil"></i>
            </a>

            <form
              action="/supprimer/<%= element.id_ge %>?_method=DELETE"
              method="POST"
              class="position-relative"
            >
              <button type="submit" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
              </button>
            </form>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
